extends layout

block content
  div(class='item-detail')
    h1 #{item.name}
    div(class='item-options')
      p
        a(class='update' href=item.url+'/update') Update Item
      p
        a(class='delete' href=item.url+'/delete') Delete Item
    
    div(class='detail-section')
      if item.itemImage
        img(class='item-img' src='/uploads/'+item.itemImage alt=`${item.name}`)
      div(class='item-vendor-section')
        a(href=item.vendor.url class='vendor-link') #{item.vendor.name}
      div(class='item-category-section')
        a(href=item.category.url class='category-link') #{item.category.name}
      p $#{item.price}
      i #{item.description}
      p Current Stock: #{item.inStock}
      