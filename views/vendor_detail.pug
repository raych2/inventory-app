extends layout

block content
  div(class='vendor-detail')
    h1 All Items by #{vendor.name}
    div(class='vendor-options')
      p
        a(class='update' href=vendor.url+'/update') Update Vendor
      p
        a(class='delete' href=vendor.url+'/delete') Delete Vendor
    hr
    div(class='vendor-items')
    i #{vendor.description}
    p
      each item in vendor_items
        div(class='vendor-section')
          a(href=item.url class='vendor-link') #{item.name}
          p $#{item.price}
          i #{item.description}

      else
        li This vendor has no items.