extends layout

block content
  div(class='delete-category')
    h1 #{title}: #{category.name}
    p #{category.description}

    if category_items.length
      div(class='delete-msg')
        p Delete the following items before attempting to delete this category.
      div(class='category-items')
      h4 Items
        each item in category_items
          div(class='category-section')
            a(href=item.url class='category-link') #{item.name}
            p $#{item.price}
            i #{item.description}

    else
      div(class='delete-msg')
        p Do you really want to delete this Category?

      form(method='POST' action='')
        div
          input#categoryid(type='hidden',name='categoryid', required='true', value=category._id)
        
        button(class='delete-btn', type='submit') Delete
